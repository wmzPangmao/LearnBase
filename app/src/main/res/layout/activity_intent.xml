<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pangmao.learnbase.activity.IntentActivity">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="学习Intent" />

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btn_intent_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="108dp"
        android:text="普通启动"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_intent_common1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:text="class启动"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_intent_common"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_intent_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:text="action启动"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_intent_common2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_intent_common2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="name启动"
        app:layout_constraintStart_toStartOf="@+id/btn_intent_common1"
        app:layout_constraintTop_toBottomOf="@+id/btn_intent_common1" />

    <Button
        android:id="@+id/btn_intent_action2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:text="action启动2"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_intent_action3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_intent_action3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="action启动3"
        app:layout_constraintStart_toStartOf="@+id/btn_intent_common2"
        app:layout_constraintTop_toBottomOf="@+id/btn_intent_common2" />


</android.support.constraint.ConstraintLayout>