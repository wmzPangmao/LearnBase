<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <Button
        android:id="@+id/btn_fragment_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="content1"/>

    <Button
        android:id="@+id/btn_fragment_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_toEndOf="@+id/btn_fragment_content1"
        android:layout_toRightOf="@+id/btn_fragment_content1"
        android:text="content2"/>

    <Button
        android:id="@+id/btn_fragment_content3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_toEndOf="@+id/btn_fragment_content2"
        android:layout_toRightOf="@+id/btn_fragment_content2"
        android:text="content3"/>
</RelativeLayout>