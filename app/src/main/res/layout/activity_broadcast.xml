<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".broadcast.BroadcastActivity"
                                                   tools:layout_editor_absoluteY="25dp">

    <androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="学习Boradcast" />

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btn_broadcast_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_broadcast_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="注销"
        app:layout_constraintStart_toStartOf="@+id/btn_broadcast_register"
        app:layout_constraintTop_toBottomOf="@+id/btn_broadcast_register"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btn_broadcast_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="普通广播"
        app:layout_constraintStart_toStartOf="@+id/btn_broadcast_cancel"
        app:layout_constraintTop_toBottomOf="@+id/btn_broadcast_cancel"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btn_broadcast_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="有序广播"
        app:layout_constraintStart_toStartOf="@+id/btn_broadcast_normal"
        app:layout_constraintTop_toBottomOf="@+id/btn_broadcast_normal"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btn_broadcast_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="本地广播"
        app:layout_constraintStart_toStartOf="@+id/btn_broadcast_order"
        app:layout_constraintTop_toBottomOf="@+id/btn_broadcast_order"
        tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>